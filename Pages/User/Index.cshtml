@page
@model ProjectPano.Pages.User.IndexModel
@{
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<a href="/User/Create" class="btn btn-primary">
	<span class="glyphicon glyphicon-plus"></span> Create
</a>

<br />
<table class="table table-hover">
	<thead>
		<tr>
			<th>ID</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Edit</th>
			<th>Delete</th>
			<th>TEST</th>
		</tr>
	</thead>
	<tbody>
		@{
			foreach(var item in Model.ListUsers)
			{
				<tr>
					<td>@item.ID</td>
					<td>@item.FirstName</td>
					<td>@item.LastName</td>
					<td>
						<a href="/User/Edit?ID=@item.ID" class="btn btn-primary">
							<span class="glyphicon glyphicon-pencil"></span> Edit
						</a>
					</td>
					<td>
						<a onclick="return onDelete(@item.ID)" class="btn btn-danger">
							<span class="glyphicon glyphicon-trash"></span> Delete
						</a>
					</td>
					<td>
						<a href="/User/Test?ID=@item.ID" class="btn btn-warning">TEST</a>
					</td>
				</tr>
			}
		}
	</tbody>
</table>

<script>
	function onDelete(id)
	{
		if(window.confirm("Are you sure?"))
		{
			window.location.href="/User/Delete?ID="+id;
		}
	}

</script>
