@page
@model ProjectPano.Pages._Admin.JobDtlsModel
@{
    ViewData["FullWidth"] = true;
    ViewData["Title"] = "Job Details";
}

<a href="/_Admin/Jobs">Back to Job List</a>
<br />
<br />
<h5 class="custom-h1">Job Details</h5>
<br />
<br />

<form method="post">
    <!-- hidden JobId to persist across posts -->
    <input type="hidden" asp-for="JobId" />

    <table class="table table-bordered table-sm">
        <thead>
            <tr>
                <th>Start</th>
                <th>Finish</th>
                <th>Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.AdminFees.Count; i++)
            {
                <tr>
                    <!-- hidden ID for binding -->
                    <input type="hidden" asp-for="AdminFees[i].AdminFeeID" />

                    <td>
                        <input type="date" asp-for="AdminFees[i].AdminFeeStart"
                               class="form-control form-control-sm" />
                    </td>
                    <td>
                        <input type="date" asp-for="AdminFees[i].AdminFeeFinish"
                               class="form-control form-control-sm" />
                    </td>
                    <td>
                        <input type="number" step="0.01" asp-for="AdminFees[i].AdminFeeAmt"
                               class="form-control form-control-sm" />
                    </td>
                    <td>
                        <button type="submit"
                                asp-page-handler="Update"
                                asp-route-id="@Model.AdminFees[i].AdminFeeID"
                                class="btn btn-sm btn-primary">
                            Save
                        </button>
                        <button type="submit"
                                asp-page-handler="Delete"
                                asp-route-id="@Model.AdminFees[i].AdminFeeID"
                                class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </td>
                </tr>
            }

            <!-- Row for adding a new fee -->
            <tr>
                <td>
                    <input type="date" asp-for="NewFee.AdminFeeStart"
                           class="form-control form-control-sm" />
                </td>
                <td>
                    <input type="date" asp-for="NewFee.AdminFeeFinish"
                           class="form-control form-control-sm" />
                </td>
                <td>
                    <input type="number" step="0.01" asp-for="NewFee.AdminFeeAmt"
                           class="form-control form-control-sm" />
                </td>
                <td>
                    <button type="submit"
                            asp-page-handler="Add"
                            class="btn btn-sm btn-success">
                        Add
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</form>
