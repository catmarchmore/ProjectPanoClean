<h5 class="custom-h1">Jobs</h5>

<!-- 🔍 Filter Controls -->
<div class="d-flex justify-content-between align-items-end mb-3">
    <div>
        <label for="billingFilter">Billing Status:</label>
        <select id="billingFilter" class="form-select form-select-sm d-inline-block w-auto">
            <option value="" selected>All</option>
            <option value="in process">In Process</option>
            <option value="completed (closed)">Completed (Closed)</option>
        </select>
    </div>

    <div>
        <input id="searchBox" type="text" class="form-control form-control-sm d-inline-block w-auto"
               placeholder="Search..." />
        <button id="newJobBtn" class="btn btn-success" onclick="showModal('New Job', null)">New Job</button>
    </div>
</div>

<!-- 📋 Jobs Table -->
<table class="table table-sm table-bordered table-compact" id="jobsTable">
    <thead class="table-light">
        <tr>
            <th>Edit</th>
            <th>Details</th>
            <th>JobID</th>
            <th>Display Name</th>
            <th>Manager</th>
            <th>Job #</th>
            <th>Client PM</th>
            <th>AFE</th>
            <th>Resource Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model.JobList)
        {
            <tr data-billing="@job.BillingStatus?.ToLower()" data-search="@($"{job.BigTimeJobDisplayName} {job.JobNum} {job.MgrName} {job.ClientPM} {job.ResourceStatus} {job.AFE}")".ToLower()>
                <td>
                    <button class="btn btn-sm btn-primary editBtn" data-id="@job.JobID">Edit</button>
                </td>
                <td>
                    <a href="/_Admin/JobDtls?jobId=@job.JobID">Job Details</a>
                </td>
                <td>@job.JobID</td>
                <td>@job.BigTimeJobDisplayName</td>
                <td>@job.MgrName</td>
                <td>@job.JobNum</td>
                <td>@job.ClientPM</td>
                <td>@job.AFE</td>
                <td>@job.ResourceStatus</td>
            </tr>
        }
    </tbody>
</table>

