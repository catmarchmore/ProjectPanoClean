@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2"></script>
    <script src="https://cdn.jsdelivr.net/npm/luxon@3"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-luxon@1"></script>
    <script src="https://cdn.sheetjs.com/xlsx-latest/package/dist/xlsx.full.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // console.log('DOM fully loaded');
            // console.log('Looking for .editBtn buttons');

            const billingFilter = document.getElementById('billingFilter');
            const searchBox = document.getElementById('searchBox');
            const tableRows = document.querySelectorAll('#jobsTable tbody tr');

            function filterRows() {
                const billing = billingFilter.value.toLowerCase();
                const search = searchBox.value.toLowerCase();

                tableRows.forEach(row => {
                    const rowBilling = (row.dataset.billing || '').toLowerCase();
                    const rowText = (row.dataset.search || '').toLowerCase();

                    // If billing filter is empty (All), ignore billing match
                    const billingMatch = billing === '' || rowBilling === billing;

                    // Search matches if search text is contained in row text
                    const searchMatch = rowText.includes(search);

                    const show = billingMatch && searchMatch;
                    row.style.display = show ? '' : 'none';
                });
            }

            billingFilter.addEventListener('change', filterRows);
            searchBox.addEventListener('input', filterRows);

            filterRows(); // initial run

            //auto grow
            document.addEventListener("input", function (e) {
                if (e.target.classList.contains("autosize")) {
                    e.target.style.height = "auto"; // reset
                    e.target.style.height = (e.target.scrollHeight) + "px"; // grow
                }
            });

            // New button click
            document.getElementById('newJobBtn').addEventListener('click', function () {
                showModal('Add New Job',null);
            });

            // showModal defined twice — better to merge into one function:
            function showModal(title, data) {
                console.log("showModal called with:", title, data);
                const today = new Date().toISOString().substring(0, 10);

                document.getElementById('jobModalLabel').textContent = title;

                if (data) {
                    document.getElementById('JobID').value = data.JobID;
                    document.getElementById('TASKS').value=data.TASKS;
                    document.getElementById('ClientID').value=data.ClientID;
                    document.getElementById('JobNum').value=data.JobNum;
                    document.getElementById('BigTimeJobDisplayName').value=data.BigTimeJobDisplayName;
                    document.getElementById('JobStartDate').value = data.JobStartDate?.substring(0, 10) || '';
                    document.getElementById('JobFinishDate').value = data.JobFinishDate?.substring(0, 10) || '';
                    document.getElementById('MgrID').value=data.MgrID;
                    document.getElementById('BillingStatus').value=data.BillingStatus;
                    document.getElementById('RateSheetID').value=data.RateSheetID;
                    document.getElementById('ProjectValue').value=data.ProjectValue;
                    // document.getElementById('NewMexTaxAmt').value = data.NewMexTaxAmt != null ? data.NewMexTaxAmt.toFixed(1) : '';
                    document.getElementById('NewMexTaxAmt').value=data.NewMexTaxAmt;
                    document.getElementById('CorpID').value=data.CorpID;
                    document.getElementById('AFE').value=data.AFE;
                    document.getElementById('ClientPM').value=data.ClientPM;
                    // document.getElementById('IndustrySectorID').value=data.IndustrySectorID;
                    document.getElementById('ProjectProgramID').value=data.ProjectProgramID;
                    document.getElementById('RegionID').value=data.RegionID;
                    document.getElementById('StreamID').value=data.StreamID;
                    document.getElementById('ResourceStatus').value=data.ResourceStatus;
                    document.getElementById('SubClientID').value=data.SubClientID;
                    document.getElementById('ProjectTypeID').value=data.ProjectTypeID;
                    document.getElementById('JobComments').value=data.JobComments;
                    document.getElementById('OTPctJob').value=data.OTPctJob;
                    //document.getElementById('BacklogStartDate').value = data.BacklogStartDate?.substring(0, 10) || '';
                    document.getElementById('BacklogStartDate').value =data.BacklogStartDate?.substring(0, 10) || today;                    
                    document.getElementById('Probability').value=data.Probability;
                    // document.getElementById('OTPctJob').value = data.OTPctJob != null ? data.OTPctJob.toFixed(1) : '';
                } else {
                    document.getElementById('JobID').value = '0';
                    document.getElementById('TASKS').value = 'true';
                    document.getElementById('ClientID').value = '';
                    document.getElementById('JobNum').value = '';
                    document.getElementById('BigTimeJobDisplayName').value = '';
                    document.getElementById('JobStartDate').value = '';
                    document.getElementById('JobFinishDate').value = '';
                    document.getElementById('MgrID').value = '';
                    document.getElementById('BillingStatus').value = 'In Process';
                    document.getElementById('RateSheetID').value = '19';
                    document.getElementById('ProjectValue').value = '';
                    document.getElementById('NewMexTaxAmt').value = '';
                    document.getElementById('CorpID').value = '';
                    document.getElementById('AFE').value = '';
                    document.getElementById('ClientPM').value = '';
                    document.getElementById('ProjectProgramID').value = 'Project';
                    document.getElementById('RegionID').value = '';
                    document.getElementById('StreamID').value = '';
                    document.getElementById('ResourceStatus').value = 'Backlog';
                    document.getElementById('SubClientID').value = 3;
                    document.getElementById('ProjectTypeID').value = '';
                    document.getElementById('JobComments').value = '';
                    document.getElementById('OTPctJob').value = '1.5';
                    document.getElementById('BacklogStartDate').value = today;
                    document.getElementById('Probability').value = 1;
                }

                $('#jobModal').modal('show');
            }


            // Edit button click
            console.log('Looking for .editBtn buttons');

            const editBtns = document.querySelectorAll('.editBtn');
            console.log('Edit buttons found:', editBtns.length);

            editBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    const jobId = this.dataset.id;
                    console.log("edit button clicked, jobid:", jobId);

                    fetch(`?handler=LoadJob&id=${jobId}`)
                    .then(response => response.json())
                    .then(data => {
                        console.log("Fetched job data:", data);
                        showModal("Edit Job", data);
                    })
                    .catch(error => {
                        console.error("Error loading job data:", error);
                    });
                });
            });      
        });
    </script>
}

